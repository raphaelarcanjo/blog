<%- contentFor('title') %>
    Login

    <%- contentFor('header') %>
        <% if (typeof mensagem !== 'undefined') { %>
            <div class="alert alert-success">
                <%= mensagem %>
            </div>
            <% } %>

                <% if (typeof erro !== 'undefined') { %>
                    <div class="alert alert-danger">
                        <%= erro %>
                    </div>
                    <% } %>

                        <%- contentFor('body') %>
                            <h3>Cadastre-se:</h3>

                            <form action="registrar" method="post">
                                <div class="form-row">
                                    <div class="form-group col-12 col-md-6">
                                        <input class="form-control" type="text" name="nome" id="nome" required>
                                        <label for="nome">Nome</label>
                                    </div>
                                    <div class="form-group col-12 col-md-6">
                                        <input class="form-control" type="text" name="sobrenome" id="sobrenome" required>
                                        <label for="sobrenome">Sobrenome</label>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-12 col-md-6">
                                        <input class="form-control" type="email" name="email" id="email" required>
                                        <label for="email">E-mail</label>
                                    </div>
                                    <div class="form-group col-12 col-md-6">
                                        <input class="form-control" type="text" name="login" id="login" required>
                                        <label for="login">Login</label>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-12 col-md-6">
                                        <input class="form-control" type="password" name="senha" id="senha" minlength="8" required>
                                        <label for="senha">Senha</label>
                                    </div>
                                    <div class="form-group col-12 col-md-6">
                                        <input class="form-control" type="password" name="confirmar_senha" id="confirmar_senha" minlength="8" required>
                                        <label for="confirmar_senha">Confirmar senha</label>
                                    </div>
                                </div>
                                <input type="submit" value="Enviar" class="btn btn-primary">
                                <a href="/" class="btn btn-secondary">Voltar</a>
                            </form>

                            <%- contentFor('footer') %>